<LinearLayout 
    android:layout_width='fill_parent'
    android:layout_height='fill_parent'
    android:orientation='vertical'
    xmlns:android='http://schemas.android.com/apk/res/android'>
     
    
  
    <fragment
        android:name='com.Loktar.lovemanager.HomeFragment'
        android:id='@+id/homefragment'
        android:layout_height='0dp'
        android:layout_weight='1.0'
        android:layout_width='fill_parent'
        />
     <fragment
        android:name='com.Loktar.lovemanager.PlayFragment'
        android:id='@+id/playfragment'
        android:layout_height='0dp'
        android:layout_weight='1.0'
        android:layout_width='fill_parent'
        />

     <fragment
         android:id="@+id/datingfragment"
         android:name="com.Loktar.lovemanager.DatingFragment"
         android:layout_width="fill_parent"
         android:layout_height="0dp"
         android:layout_weight="1.0" />

     <fragment
        android:name='com.Loktar.lovemanager.ShareFragment'
        android:id='@+id/sharefragment'
        android:layout_height='0dp'
        android:layout_weight='1.0'
        android:layout_width='fill_parent'
      
        />
   
    <include layout='@layout/tabfoot'/>
    
</LinearLayout>